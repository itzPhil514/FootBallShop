@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@model IEnumerable<FootBallShop.Models.Clubs>

@{
    ViewData["Title"] = "Clubs Index";
}

<h1>Clubs</h1>

<!-- Add Button Visible Only to Admins -->
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <p>
        <a href="@Url.Action("Create", "Clubs")" class="btn btn-primary">Add Club</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().League.LeagueName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.League.LeagueName)
                </td>
                <td>
                    <a href="@Url.Action("Details", new { id = item.ClubId })" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
