@model List<Jerseys>
@{
    ViewData["Title"] = "Home Page";
}

<div class="home-page-container">
    <div class="text-center">
        <h2 class="home-page-title">FootBall Kits</h2>
        <div class="row">
            @foreach (var jersey in Model)
            {
                <div class="col-md-3 mb-4">
                    <a asp-action="Details" asp-controller="Jerseys" asp-route-id="@jersey.JerseysId" class="home-jersey-card-link">
                        <div class="home-jersey-card h-100">
                            <img class="home-jersey-card-img-top" src="@Url.Content($"~/img/jerseys/{jersey.img}")" alt="@jersey.Name" />
                            <div class="home-jersey-card-body">
                                <h5 class="home-jersey-card-title">@jersey.Name</h5>
                                <p class="home-jersey-card-text">
                                    <strong>Price:</strong> $@jersey.Price
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
