@model IEnumerable<FootBallShop.Models.Jerseys>

@{
    ViewData["Title"] = "Index";
}

<h1>Jerseys List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Jersey</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Size)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>League/InterLeague</th>
            <th>Club/Nation</th>
            <th>@Html.DisplayNameFor(model => model.img)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Size)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>
                    @if (item.IsInter)
                    {
                        @Html.DisplayFor(modelItem => item.InterLeague.interLeaguesName)
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.League.LeagueName)
                    }
                </td>
                <td>
                    @if (item.IsInter)
                    {
                        @Html.DisplayFor(modelItem => item.Nation.Name)
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.Club.Name)
                    }
                </td>
                <td>
                    <img src="~/images/@item.img" alt="@item.Name" class="img-thumbnail" style="width: 100px;" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.JerseysId" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.JerseysId" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.JerseysId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
