@model IEnumerable<FootBallShop.Models.Nations>

@{
    ViewData["Title"] = "Index";
}

<div class="container my-4">
    <h1 class="mb-4">Clubs</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Club</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>League</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.InterLeagues.interLeaguesName</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.img))
                            {
                                <img src="@Url.Content($"~/img/nations/{item.img}")" alt="@item.Name" style="height: 50px; width: auto;">
                            }
                            else
                            {
                                <img src="~/img/default-placeholder.png" alt="No Image" style="height: 50px; width: auto;">
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.NationId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.NationId" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.NationId" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
